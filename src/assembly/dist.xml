<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
                <include>CHANGES.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/dist</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>logo.bmp</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>pulse-${project.version}.jar</include>
                <include>pulse-${project.version}-sources.jar</include>
                <include>pulse-${project.version}-javadoc.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/src/dist/pulse</source>
            <outputDirectory>/</outputDirectory>
            <destName>pulse-${project.version}</destName>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${project.basedir}/src/dist/pulse.bat</source>
            <outputDirectory>/</outputDirectory>
            <destName>pulse-${project.version}.bat</destName>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>
